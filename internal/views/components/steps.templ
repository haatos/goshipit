package components

templ Steps() {
	<ul class="steps">
		{ children... }
	</ul>
}

type StepProps struct {
	Label string
	Done  bool
	Attrs templ.Attributes
}

templ Step(props StepProps) {
	<li
		class={ "step", templ.KV("step-primary", props.Done) }
	>
		<a { props.Attrs... }>{ props.Label }</a>
	</li>
}
