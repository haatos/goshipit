templ ActiveSearchTableRows(rows []templ.Component) {
	for _, r := range rows {
		@r
	}
}

templ ActiveSearchTableRow(firstName, lastName, email string) {
	<tr>
		<td>{ firstName }</td>
		<td>{ lastName }</td>
		<td>{ email }</td>
	</tr>
}
