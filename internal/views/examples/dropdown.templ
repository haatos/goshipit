package examples

import "github.com/haatos/goshipit/internal/views/components"

// example
templ BasicDropdown() {
	<div class="h-48">
		@components.Dropdown(
			components.DropdownProps{
				Label: "Dropdown label",
				Items: []components.DropdownItem{
					{Label: "Item 1"},
					{Label: "Item 2"},
					{Label: "Item 3"},
				},
				ListClass: "bg-base-200 rounded-box z-50 w-52 p-2 shadow",
			},
		)
	</div>
}
